def noRep(arr, n):
    for i in range(n):
        j = 0
        # checking if the number is existing in the array
        while(j < n):
            if (i != j and arr[i] == arr[j]):
                break
            j += 1
        if (j == n):
            return arr[i]
 
    return -1
 
 

non_Rep = [1, 2, 7, 5, 8, 2, 1]
length = len(non_Rep)
print(noRep(non_Rep, length))

