non_Rep = [1, 2, 7, 5, 8, 2, 1] #
length = len(non_Rep) #

for i in range(length):
  j = 0
  # Checking if the element is present in array
  while(j < length):
    if (i != j and non_Rep[i] == non_Rep[j]):
      break
      j += 1
    if (j == length):
        print ("Found the first repeating number!")
        break
        
print ("The first nonrpeating number is:", j)
